# Server Configuration
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
ALLOWED_ORIGIN=http://localhost:5173

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# LTI 1.3 Platform Configuration (Canvas example)
PLATFORM_ISSUER=https://canvas.instructure.com
PLATFORM_CLIENT_ID=your_client_id_here
PLATFORM_DEPLOYMENT_ID=your_deployment_id_here
PLATFORM_AUTH_LOGIN_URL=https://canvas.instructure.com/api/lti/authorize_redirect
PLATFORM_JWKS_URL=https://canvas.instructure.com/api/lti/security/jwks
PLATFORM_TOKEN_URL=https://canvas.instructure.com/login/oauth2/token

# LTI Tool Configuration
LTI_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----
LTI_KID=blunote-lti-key-1
LTI_TOOL_URL=https://your-domain.com

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
# CRITICAL: Must be from same org/project as your Agent Builder workflow
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_ORG_ID=your_org_id_here_optional

# OpenAI Model Configuration
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FAST_MODEL=gpt-3.5-turbo

# OpenAI ChatKit Configuration (Agent Builder)
# Get workflow ID from: https://platform.openai.com/playground/assistants
# Workflow ID starts with: wf_xxxxxxxxxxxxx
CHATKIT_WORKFLOW_ID=wf_your_workflow_id_here

# Security
SESSION_SECRET=your_secure_random_string_min_32_chars
WEBHOOK_SECRET=your_webhook_hmac_secret_here

# Feature Flags
ENABLE_DEEP_LINKING=true
ENABLE_AGS=true
ENABLE_NRPS=true
